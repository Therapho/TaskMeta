@namespace JobMeta.Components.Jobs
@rendermode InteractiveServer
<FluentCard class="Panel">
    <FluentStack Orientation="Orientation.Vertical">
        @if (JobList != null)
        {
            foreach (var job in JobList)
            {
                <FluentCheckbox Label="@job.Description" @bind-value="@job.Complete" ReadOnly="@locked"
                                @bind-value:after="()=>HandleChange(job)" />
            }
        }
    </FluentStack>
</FluentCard>